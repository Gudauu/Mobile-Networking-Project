<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
<!--    tools:context="com.example.bluehelp.PhoneVerification.PhoneVerificationActivity">-->
    <TextView
        android:id="@+id/input_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textSize="28dp"
        android:textColor="@color/systemFont"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent" />
<!--    <Button-->
<!--        android:id="@+id/button_input_to_main"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="返回"-->
<!--        android:textColor="@color/systemFont"-->
<!--        android:textSize="20sp"-->
<!--        android:layout_marginTop="12dp"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintRight_toRightOf="parent"/>-->
    <TextView
        android:id="@+id/title_phone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_input_height"
        android:layout_marginTop="80dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:text="手机号："
        android:textSize="25dp"
        android:textColor="@color/systemFont"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="@dimen/activity_input_left_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_title" />
    <EditText
        android:id="@+id/input_phone"
        android:layout_width="180dp"
        android:layout_height="@dimen/activity_input_height"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:gravity="center"
        android:textSize="@dimen/activity_input_text_size"
        android:textColor="@color/editFont"
        android:backgroundTint="@color/systemLine"
        app:layout_constraintLeft_toLeftOf="@+id/title_phone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_title" />
    <Button
        android:id="@+id/send_vcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送验证码"
        android:textColor="@color/systemFont"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/input_phone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/title_vcode"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_input_height"
        android:layout_marginTop="80dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:text="验证码："
        android:textSize="25dp"
        android:textColor="@color/systemFont"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="@dimen/activity_input_left_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/send_vcode" />
    <EditText
        android:id="@+id/input_vcode"
        android:layout_width="180dp"
        android:layout_height="@dimen/activity_input_height"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:gravity="center"
        android:textSize="@dimen/activity_input_text_size"
        android:textColor="@color/editFont"
        android:backgroundTint="@color/systemLine"
        app:layout_constraintLeft_toLeftOf="@+id/title_vcode"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/send_vcode" />
    <Button
        android:id="@+id/verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证登录"
        android:textColor="@color/systemFont"
        android:textSize="30sp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/User_protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户协议"
        android:textColor="@color/systemFontGrey"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>